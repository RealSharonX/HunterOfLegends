body
  header.tm-header
    .tm-container2
      a#mainLogo(href='/') Hunter of Legends
    .tm-errors
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}      
  .tm-content
    .tm-main
      .shadow
        h2 Login
        form(method='POST', action='/users/login' autocomplete="offu")
          .inputBox
            input(type='text' name='username' required='')
            label Username
          .inputBox
            input(type='password' name='password' required='')
            label Password
          input(type='submit' value='Submit')
        a#fp(href='#') Forgot password ?
        br
        label Don&apos;t have an account?
        a#su(href='/users/register') Sign Up
